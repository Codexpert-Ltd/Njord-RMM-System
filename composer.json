{
    "name": "codexpert-ltd/njord-rmm-system",
    "type": "project",
    "description": "Njord Remote monitoring and management system for IoT Devices",
    "homepage": "http://iot.codexpertltd.co.uk/",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.0",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "support": {
        "source": "https://github.com/Codexpert-Ltd/Njord-RMM-System"
    }
}
